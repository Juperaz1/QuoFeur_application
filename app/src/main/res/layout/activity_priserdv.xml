<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">


    <Spinner
        android:id="@+id/spinnerCoiffeur"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Choisissez un coiffeur"/>


    <Spinner
        android:id="@+id/spinnerPrestation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Choisissez une prestation"/>


    <EditText
        android:id="@+id/etDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Date (dd/MM/yyyy)"
        android:inputType="date"/>

    <EditText
        android:id="@+id/etHeure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Heure (HH:mm)"
        android:inputType="time"/>


    <Button
        android:id="@+id/btnConfirmerRDV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Confirmer RDV"/>

    <RecyclerView
        android:id="@+id/recyclerViewSalons"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

</LinearLayout>
