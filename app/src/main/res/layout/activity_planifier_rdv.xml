<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/dateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date non sélectionnée"
        android:textSize="18sp"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/choisirDateButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choisir la date"/>

    <TextView
        android:id="@+id/heureTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Heure non sélectionnée"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/choisirHeureButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choisir l'heure"/>

    <EditText
        android:id="@+id/editTextPrestation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Type de prestation"
        android:inputType="text"/>

    <Button
        android:id="@+id/btnConfirmerRDV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirmer le RDV"
        android:layout_marginTop="32dp"/>

</LinearLayout>